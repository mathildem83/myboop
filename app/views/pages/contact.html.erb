<div>
  <%= render "shared/back"%>
</div>
<div class="container">
  <h1 class="text-center my-4">Contactez-nous</h1>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with url: contact_path, method: :post, local: true do |form| %>
        <div class="mb-3">
          <%= form.label :name, "Nom", class: "form-label" %>
          <%= form.text_field :name, class: "form-control", required: true %>
        </div>
        <div class="mb-3">
          <%= form.label :email, "Email", class: "form-label" %>
          <%= form.email_field :email, class: "form-control", required: true %>
        </div>
        <div class="mb-3">
          <%= form.label :message, "Message", class: "form-label" %>
          <%= form.text_area :message, class: "form-control", rows: 5, required: true %>
        </div>
        <div class="text-center">
          <%= form.submit "Envoyer", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
